{
  "manifest_version": 3,
  "name": "Poodthai",
  "version": "1.0.0",
  "description": "Highlight Thai text and hear it spoken aloud with a natural Thai voice. Free forever.",
  "permissions": ["activeTab", "contextMenus", "storage"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "popup.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "commands": {
    "play-selection": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "Read selected Thai text aloud"
    }
  }
}
